doctype html
html(lang="#{DEFAULT_LANG}")
  head
    block head
    title
      block title
        = SITENAME
    meta(charset="utf-8")
    //- Not Necessary
      if FEED_ALL_ATOM
        link(href="#{FEED_DOMAIN}/#{FEED_ALL_ATOM}" type="application/atom+xml" rel="alternate" title="{{ SITENAME }} Full Atom Feed")
      if FEED_ALL_RSS
        link(href="{{ FEED_DOMAIN }}/{{ FEED_ALL_RSS}}" type="application/rss+xml" rel="alternate" title="{{ SITENAME }} Full RSS Feed")

  body.home#index
    header.body#banner
      h1
        a(href="#{SITEURL}/")= SITENAME
          strong= SITESUBTITLE
    nav#memu
      ul
        for title, link in MENUITEMS
          li
            a(href="#{link}")= title
        if DISPLAY_PAGES_ON_MENU
          for p in PAGES
            if p == page
              li.active
            else
              li
            a(href="#{SITEURL}/#{p.url}")= p.title
        else
          if DISPLAY_CATEGORIES_ON_MENU
            for cat, null in categories
              if 
                li.active
              else
                li
              a(href="#{SITEURL}/#{cat.url}")= cat
    block content
    footer.body#contentinfo
      address.vcard.body#about
        | Proudly powered by
        a(href="http://getpelican.com/") Pelican
